# Puerto del servidor
PORT=8000

# Configuración de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# O alternativamente usar REDIS_URL para conexión completa
# REDIS_URL=redis://localhost:6379/0

